@model List<Training2._1.Models.Student>


<link href="~/css/style.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <div class="float-start">
                <a class="btn btn-sm btn-primary p-1 m-1" asp-action="Create" asp-controller="Student">Add</a>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="text-center bg-dark text-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tblBody">
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.Name</td>
                            <td>@(student.Dpt != null ? student.Dpt.Name : "N/A")</td>
                            <td>
                                <a class="btn btn-primary m-1" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                                <a class="btn btn-danger m-1" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>



